{
  "manifest_version": 2,
  "name": "3 Elephants",
  "icons": { "16": "assets/images/icon-16.png",
           "48": "assets/images/icon-48.png",
          "128": "assets/images/icon-128.png" },
  "description": "A browser extension that supports environmentally conscious shopping",
  "version": "0.0.8",
  "content_scripts": [{
    "matches": ["http://www.amazon.com/*", "https://www.amazon.com/*", "https://www.amazon.com/*"],
    "js": ["controller.js"],
    "css": ["styles.css"],
    "run_at": "document_start"
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "assets/iconfont/*",
    "assets/images/*"
  ],

  "permissions": ["activeTab", "declarativeContent", "storage", "https://*.amazonaws.com/3elephants-beta/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "3 Elephants"
  }


}
